<Window x:Class="Wishlist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wishlist"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Name="thisWindow">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock VerticalAlignment="Center" Text="WishList"/>
            <TextBox Text="{Binding ElementName=thisWindow, Path=PoleDoWpisywania}"/>
            <Button Click="Button_Click_Add" Content="ADD"/>
            <Button Click="Button_Click_Delete" Content="DELETE"/>
            <ListBox Name="listBox" />


        </StackPanel>
    </Grid>
</Window>
